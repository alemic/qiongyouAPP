<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="160dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv"
        android:id="@+id/cte_short_name"
        android:padding="10dp"
        android:textColor="@color/colorgrenn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cte_short_name"
        android:layout_toRightOf="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/poiimage"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toLeftOf="@+id/city_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_poi_green"
        />
    <TextView
        android:id="@+id/city_name"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cte_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sale_count"
        android:padding="10dp"
       android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>